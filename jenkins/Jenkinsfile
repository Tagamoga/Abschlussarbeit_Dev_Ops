pipeline {
    agent any

    stages {
        stage('Build - Backend') {
            steps {
                dir('backend') {
                    // ruft Maven mit dem dev-Profile auf
                    sh 'mvn clean install -Pdev'
                }
            }
        }

        stage('Build - Frontend') {
            steps {
                dir('frontend') {
                    // installiert Dependencies und baut
                    sh '''
                        npm install
                        npm run build
                    '''
                }
            }
        }
    }
}