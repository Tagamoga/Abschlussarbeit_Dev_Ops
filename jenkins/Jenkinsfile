pipeline {
    agent any

    stages {
        stage('Build - Backend') {
            steps {
                dir('backend') {
                        sh 'mvn clean install -P dev'
                }
            }
        }

        stage('Build - Frontend') {
            dir('backend') {
                steps {
                    sh 'npm install && npm run build'
                }
            }
        }
    }
}