pipeline {
    agent any

    stages {
        stage('Build - Backend') {
            steps {
                dir('backend') {
                    // ruft Maven mit dem dev-Profile auf
                    sh 'mvn clean install -Pdev'
                }
            }
        }

        stage('Build - Frontend') {
            steps {
                dir('frontend') {
                    // installiert Dependencies und baut
                    sh '''
                        npm install
                        npm run build
                    '''
                }
            }
        }

        stage('Test - Backend') {
            steps {
                dir('backend') {
                    sh 'mvn test'
                }
            }
        }

        stage('Test - Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm test'
                }
            }
        }

        stage('Docker Build') {
            steps {
                echo "Docker Build"
            }
        }

        stage('Docker Push') {
            steps {
                echo 'Docker Push'
            }
        }

        stage('Deploy Dev') {
            steps {
                echo 'Deploy Dev'
            }
        }

        stage('Deploy Prod') {
            steps {
                echo 'Deploy Prod'
            }
        }

    }
}